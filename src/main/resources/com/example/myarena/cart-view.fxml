<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myarena.ui.CartFrame"
            styleClass="dashboard-background" stylesheets="@styles/myarena-styles.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-nav">
            <Button fx:id="btnBackToMenu" text="â† Back to Menu" styleClass="button, secondary"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="ðŸ›’ My Cart" styleClass="logo-text"/>
        </HBox>
    </top>

    <center>
        <StackPane style="-fx-padding: 30;">

            <HBox spacing="30" styleClass="stat-card" maxWidth="900" maxHeight="600" style="-fx-padding: 30;">

                <VBox spacing="15" HBox.hgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT">
                        <Label fx:id="lblCartItemsCount" text="Your Items" styleClass="section-header"/>
                    </HBox>

                    <StackPane VBox.vgrow="ALWAYS">
                        <ListView fx:id="cartItemsListView" style="-fx-background-color: #f8f9fa; -fx-border-color: #e0e0e0;"/>

                        <VBox fx:id="emptyCartMessage" alignment="CENTER" spacing="10" visible="false" style="-fx-background-color: white;">
                            <Label text="ðŸ›’" style="-fx-font-size: 48px;"/>
                            <Label text="Your cart is empty" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                            <Label text="Go browse our catalog to add items!" style="-fx-text-fill: gray;"/>
                        </VBox>
                    </StackPane>

                    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 5;">
                        <Label text="Promo Code:"/>
                        <ComboBox fx:id="cmbPromotions" promptText="Select a discount..." prefWidth="200"/>
                        <Button fx:id="btnApplyPromotion" text="Apply" styleClass="button, outline"/>
                    </HBox>
                </VBox>

                <Separator orientation="VERTICAL"/>

                <VBox spacing="20" minWidth="280" prefWidth="300">
                    <Label text="Order Summary" styleClass="section-header"/>

                    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 8;">
                        <HBox>
                            <Label text="Subtotal" styleClass="label, muted"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblSubtotal" text="\$0.00" style="-fx-font-weight: bold;"/>
                        </HBox>

                        <Separator/>

                        <HBox>
                            <Label text="Total" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblTotal" text="\$0.00" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        </HBox>
                    </VBox>

                    <Region VBox.vgrow="ALWAYS"/>

                    <VBox spacing="10">
                        <Button fx:id="btnProceedToCheckout" text="Confirm Order"
                                maxWidth="Infinity" styleClass="button, primary" style="-fx-padding: 12;"/>

                        <Button fx:id="btnContinueShopping" text="Continue Shopping"
                                maxWidth="Infinity" styleClass="button, ghost" style="-fx-text-fill: #7f8c8d;"/>
                    </VBox>
                </VBox>

            </HBox>
        </StackPane>
    </center>

</BorderPane>