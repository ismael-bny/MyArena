<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.myarena.ui.CartFrame"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" 
              style="-fx-background-color: #2c3e50; -fx-padding: 12 25;">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button fx:id="btnBackToMenu" text="â† Back to Menu" 
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 4; -fx-cursor: hand;"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Shopping Cart" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    style="-fx-background-color: #f5f5f5;">
            <HBox spacing="30" style="-fx-padding: 40;">

                <!-- Left Section - Shopping Cart Items List -->
                <VBox spacing="20" HBox.hgrow="ALWAYS" style="-fx-max-width: 650;">

                    <!-- Header -->
                    <VBox spacing="8">
                        <Label text="Shopping Cart"
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="Review your items and proceed to checkout"
                               style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>

                    <!-- Cart Items Container -->
                    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #ecf0f1; -fx-border-width: 1; -fx-border-radius: 8;">

                        <Label fx:id="lblCartItemsCount" text="Cart Items (0)"
                               style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                        <!-- Shopping Cart Items ListView -->
                        <ListView fx:id="cartItemsListView"
                                  prefHeight="350"
                                  style="-fx-background-color: white; -fx-border-color: transparent;"/>

                        <!-- Empty Cart Message -->
                        <VBox fx:id="emptyCartMessage" spacing="12" alignment="CENTER"
                              style="-fx-padding: 50;">
                            <Label text="ðŸ›’" style="-fx-font-size: 64px;"/>
                            <Label text="Your cart is empty"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Label text="Browse our products to add items to your cart"
                                   style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d; -fx-alignment: center;"/>
                        </VBox>
                    </VBox>
                </VBox>

                <!-- Section droite - Promotions + Summary -->
                <VBox spacing="20" prefWidth="350">

                    <!-- Promotions Card -->
                    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #ecf0f1; -fx-border-width: 1; -fx-border-radius: 8;">

                        <Label text="ðŸ·ï¸  Apply Promotions"
                               style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                        <!-- Promotions ComboBox -->
                        <ComboBox fx:id="cmbPromotions" promptText="Select a promotion"
                                  maxWidth="Infinity"
                                  style="-fx-font-size: 13px;"/>

                        <Button fx:id="btnApplyPromotion" text="Apply Promotion"
                                maxWidth="Infinity"
                                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 0; -fx-background-radius: 5; -fx-cursor: hand;"/>

                        <Label fx:id="lblPromotionStatus" text=""
                               style="-fx-font-size: 12px; -fx-text-fill: #27ae60; -fx-alignment: center;"/>

                        <VBox style="-fx-background-color: #ecf9ff; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #3498db; -fx-border-width: 0 0 0 3;">
                            <Label text="âœ“ Only one promotion can be applied per order"
                                   wrapText="true"
                                   style="-fx-font-size: 12px; -fx-text-fill: #2980b9;"/>
                        </VBox>
                    </VBox>

                    <!-- Order Summary Card -->
                    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #ecf0f1; -fx-border-width: 1; -fx-border-radius: 8;">

                        <Label text="Order Summary"
                               style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                        <Separator style="-fx-border-color: #ecf0f1;"/>

                        <!-- Subtotal Row -->
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Subtotal:"
                                   style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblSubtotal" text="$0.00"
                                   style="-fx-font-size: 13px; -fx-text-fill: #2c3e50;"/>
                        </HBox>

                        <!-- Total Row -->
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Total:"
                                   style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblTotal" text="$0.00"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                        </HBox>

                        <Separator style="-fx-border-color: #ecf0f1;"/>

                        <!-- Action Buttons -->
                        <VBox spacing="12">
                            <Button fx:id="btnProceedToCheckout" text="âœ“ Proceed to Checkout"
                                    maxWidth="Infinity"
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 11 0; -fx-background-radius: 5; -fx-cursor: hand;"/>

                            <Button fx:id="btnContinueShopping" text="Continue Shopping"
                                    maxWidth="Infinity"
                                    style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-border-color: #3498db; -fx-border-width: 1.5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 10 0; -fx-cursor: hand;"/>
                        </VBox>
                    </VBox>
                </VBox>
            </HBox>
        </ScrollPane>
    </center>
</BorderPane>