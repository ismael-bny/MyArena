<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.myarena.ui.CartFrame"
            style="-fx-background-color: #f5f5f5;">

    <!-- Contenu principal -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    style="-fx-background-color: #f5f5f5;">
            <HBox spacing="30" style="-fx-padding: 40;">

                <!-- Section gauche - Liste des articles du panier -->
                <VBox spacing="20" HBox.hgrow="ALWAYS" style="-fx-max-width: 650;">

                    <!-- Titre -->
                    <VBox spacing="5">
                        <Label text="Shopping Cart"
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                        <Label text="Review your items and proceed to checkout"
                               style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                    </VBox>

                    <!-- Conteneur des articles -->
                    <VBox spacing="15"
                          style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">

                        <Label fx:id="lblCartItemsCount" text="Cart Items (0)"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

                        <!-- Liste des articles (ListView) -->
                        <ListView fx:id="cartItemsListView"
                                  prefHeight="300"
                                  style="-fx-background-color: white; -fx-border-color: transparent;"/>

                        <!-- Message si panier vide -->
                        <VBox fx:id="emptyCartMessage" spacing="10" alignment="CENTER"
                              style="-fx-padding: 40;">
                            <Label text="ðŸ›’" style="-fx-font-size: 48px;"/>
                            <Label text="Your cart is empty"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                            <Label text="Browse our products to add items to your cart"
                                   style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                        </VBox>
                    </VBox>
                </VBox>

                <!-- Section droite - Promotions + Summary -->
                <VBox spacing="20" prefWidth="350">

                    <!-- Promotions -->
                    <VBox spacing="15"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">

                        <Label text="ðŸ·ï¸ Promotions"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

                        <!-- ComboBox pour sÃ©lectionner la promotion -->
                        <ComboBox fx:id="cmbPromotions" promptText="Select a promotion"
                                  maxWidth="Infinity"
                                  style="-fx-font-size: 14px;"/>

                        <Button fx:id="btnApplyPromotion" text="ðŸ·ï¸ Apply Promotion"
                                maxWidth="Infinity"
                                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 0 12 0; -fx-background-radius: 5; -fx-cursor: hand;"/>

                        <Label fx:id="lblPromotionStatus" text=""
                               style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-alignment: center;"/>

                        <VBox style="-fx-background-color: #E3F2FD; -fx-padding: 10; -fx-background-radius: 5;">
                            <Label text="â„¹ï¸ Only one promotion can be applied per order"
                                   wrapText="true"
                                   style="-fx-font-size: 12px; -fx-text-fill: #1E90FF;"/>
                        </VBox>
                    </VBox>

                    <!-- Order Summary -->
                    <VBox spacing="15"
                          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;">

                        <Label text="Order Summary"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

                        <Separator style="-fx-background-color: #e0e0e0;"/>

                        <!-- Subtotal -->
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Subtotal:"
                                   style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblSubtotal" text="\$0.00"
                                   style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
                        </HBox>

                        <!-- Total -->
                        <HBox alignment="CENTER_LEFT">
                            <Label text="Total:"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblTotal" text="\$0.00"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
                        </HBox>

                        <Separator style="-fx-background-color: #e0e0e0;"/>

                        <!-- Boutons d'action -->
                        <VBox spacing="10">
                            <Button fx:id="btnProceedToCheckout" text="Proceed to Checkout"
                                    maxWidth="Infinity"
                                    style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 0 12 0; -fx-background-radius: 5; -fx-cursor: hand;"/>

                            <Button fx:id="btnContinueShopping" text="Continue Shopping"
                                    maxWidth="Infinity"
                                    style="-fx-background-color: transparent; -fx-text-fill: #1E90FF; -fx-border-color: #1E90FF; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 14px; -fx-padding: 12 0 12 0; -fx-cursor: hand;"/>
                        </VBox>
                    </VBox>
                </VBox>
            </HBox>
        </ScrollPane>
    </center>
</BorderPane>