<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.myarena.ui.MyReservationsFrame"
      spacing="20" styleClass="root"
      style="-fx-background-color: #f5f7fb;">

    <padding>
        <Insets top="40" left="40" right="40" bottom="40"/>
    </padding>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button fx:id="backButton" text="â† Back" styleClass="button, secondary"/>
        <VBox spacing="5">
            <Label text="My Reservations" styleClass="label, h1" style="-fx-text-fill: #111827;"/>
            <Label text="View your upcoming and past bookings." styleClass="label, text-muted"/>
        </VBox>
    </HBox>

    <VBox spacing="10" VBox.vgrow="ALWAYS" styleClass="card" style="-fx-background-color: white; -fx-padding: 20;">
        <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="#" prefWidth="50"/>
                <TableColumn fx:id="terrainColumn" text="Terrain ID" prefWidth="80"/>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                <TableColumn fx:id="timeColumn" text="Time" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Label fx:id="emptyLabel" text="No reservations found." styleClass="label, text-muted" visible="false"/>
    </VBox>
</VBox>