<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.myarena.ui.BuyProductDialog"
      spacing="20"
      style="-fx-background-color: white; -fx-padding: 30;">

    <Label text="Buy Product" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox spacing="10" style="-fx-background-color: #FFE0B2; -fx-padding: 20; -fx-background-radius: 5;">

        <Label fx:id="lblProductName" text="Product Name"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Label fx:id="lblProductDescription" text="Description..." wrapText="true"
               style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>

        <Label fx:id="lblUnitPrice" text="\$0.00"
               style="-fx-font-size: 14px; -fx-text-fill: #FF9800; -fx-font-weight: bold;"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Stock Available" style="-fx-font-weight: bold;"/>
        <Label fx:id="lblStockAvailable" text="0 units available"
               style="-fx-text-fill: #4CAF50; -fx-padding: 5 10; -fx-background-color: #f0f0f0;"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Quantity *" style="-fx-font-weight: bold;"/>
        <Spinner fx:id="quantitySpinner" prefWidth="400" editable="true"/>
    </VBox>

    <Separator/>

    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT">
            <Label text="Unit Price:" HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblSummaryUnitPrice" text="\$0.00"/>
        </HBox>

        <HBox alignment="CENTER_LEFT">
            <Label text="Quantity:" HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblSummaryQuantity" text="1"/>
        </HBox>

        <HBox alignment="CENTER_LEFT">
            <Label text="Total Amount:" style="-fx-font-weight: bold;" HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblTotalAmount" text="\$0.00" style="-fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
        </HBox>
    </VBox>

    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="btnConfirm" text="Confirm Purchase" defaultButton="true"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>

        <Button fx:id="btnCancel" text="Cancel" cancelButton="true"
                style="-fx-background-color: transparent; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10 20;"/>
    </HBox>

</VBox>