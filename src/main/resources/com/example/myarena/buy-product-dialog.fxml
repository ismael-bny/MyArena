<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.myarena.ui.BuyProductDialog"
      spacing="20"
      style="-fx-background-color: white; -fx-padding: 30;">

    <!-- Titre -->
    <Label text="Buy Product"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- EncadrÃ© produit -->
    <VBox spacing="10"
          style="-fx-background-color: #FFE0B2; -fx-padding: 20; -fx-background-radius: 5;">

        <Label fx:id="lblProductName"
               text="Professional Soccer Ball"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <Label fx:id="lblProductDescription"
               text="Official size 5 soccer ball, suitable for professional matches and training"
               wrapText="true"
               style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>

        <Label fx:id="lblUnitPrice"
               text="ðŸ’² $45.00"
               style="-fx-font-size: 14px; -fx-text-fill: #FF9800; -fx-font-weight: bold;"/>
    </VBox>

    <!-- Champ Stock Available (lecture seule) -->
    <VBox spacing="5">
        <Label text="Stock Available"
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <Label fx:id="lblStockAvailable"
               text="15 units available"
               style="-fx-font-size: 14px; -fx-text-fill: #4CAF50; -fx-padding: 10; -fx-background-color: #f0f0f0; -fx-background-radius: 5;"/>
    </VBox>

    <!-- Champ Quantity -->
    <VBox spacing="5">
        <Label text="Quantity *"
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <Spinner fx:id="quantitySpinner"
                 prefWidth="400"
                 style="-fx-background-color: white;"/>
    </VBox>

    <!-- SÃ©parateur -->
    <Separator style="-fx-background-color: #e0e0e0;"/>

    <!-- RÃ©capitulatif -->
    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT">
            <Label text="Unit Price:"
                   style="-fx-font-size: 14px; -fx-text-fill: #666666;"
                   HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblSummaryUnitPrice"
                   text="$45.00"
                   style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
        </HBox>

        <HBox alignment="CENTER_LEFT">
            <Label text="Quantity:"
                   style="-fx-font-size: 14px; -fx-text-fill: #666666;"
                   HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblSummaryQuantity"
                   text="1"
                   style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
        </HBox>

        <HBox alignment="CENTER_LEFT">
            <Label text="Total Amount:"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"
                   HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblTotalAmount"
                   text="$45.00"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
        </HBox>
    </VBox>

    <!-- Note d'avertissement -->
    <VBox style="-fx-background-color: #FFF9C4; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Note: This is a one-time purchase. Once confirmed, the item will be added to your cart."
               wrapText="true"
               style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
    </VBox>

    <!-- Boutons -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="btnConfirm"
                text="Confirm Purchase"
                prefWidth="180"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5;"/>

        <Button fx:id="btnCancel"
                text="Cancel"
                prefWidth="120"
                style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 5; -fx-font-size: 14px; -fx-padding: 10;"/>
    </HBox>
</VBox>