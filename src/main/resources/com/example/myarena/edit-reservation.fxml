<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.myarena.ui.EditReservationController"
      spacing="20" styleClass="root"
      style="-fx-background-color: #ffffff;"
      stylesheets="@styles/myarena-styles.css"
      prefWidth="500" prefHeight="600">

    <padding>
        <Insets top="30" left="30" right="30" bottom="30"/>
    </padding>

    <VBox spacing="5">
        <Label text="Edit Reservation" styleClass="label, h2" style="-fx-text-fill: #111827;"/>
        <Label text="Update your reservation details" styleClass="label, text-muted"/>
    </VBox>

    <Separator/>

    <VBox spacing="15" VBox.vgrow="ALWAYS">

        <!-- Reservation ID (Read-only) -->
        <VBox spacing="8">
            <Label text="Reservation ID" styleClass="label, strong"/>
            <TextField fx:id="reservationIdField" editable="false" styleClass="text-field"/>
        </VBox>

        <!-- Terrain ID (Read-only) -->
        <VBox spacing="8">
            <Label text="Terrain ID" styleClass="label, strong"/>
            <TextField fx:id="terrainIdField" editable="false" styleClass="text-field"/>
        </VBox>

        <!-- Start Date & Time -->
        <HBox spacing="15">
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="Start Date" styleClass="label, strong"/>
                <DatePicker fx:id="startDatePicker" styleClass="text-field"/>
            </VBox>
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="Start Time" styleClass="label, strong"/>
                <TextField fx:id="startTimeField" promptText="HH:mm" styleClass="text-field"/>
            </VBox>
        </HBox>

        <!-- End Date & Time -->
        <HBox spacing="15">
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="End Date" styleClass="label, strong"/>
                <DatePicker fx:id="endDatePicker" styleClass="text-field"/>
            </VBox>
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="End Time" styleClass="label, strong"/>
                <TextField fx:id="endTimeField" promptText="HH:mm" styleClass="text-field"/>
            </VBox>
        </HBox>

        <!-- Participants -->
        <VBox spacing="8">
            <Label text="Number of Participants" styleClass="label, strong"/>
            <Spinner fx:id="participantsSpinner" prefWidth="Infinity"/>
        </VBox>

        <!-- Purpose -->
        <VBox spacing="8">
            <Label text="Purpose" styleClass="label, strong"/>
            <TextArea fx:id="purposeTextArea" wrapText="true" styleClass="text-area" style="-fx-control-inner-background: #f3f3f5;" prefRowCount="3"/>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" styleClass="button, secondary"/>
        <Button fx:id="saveButton" text="Save Changes" styleClass="button, primary"/>
    </HBox>
</VBox>
