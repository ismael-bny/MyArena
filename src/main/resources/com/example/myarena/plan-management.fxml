<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    Vue pour gérer les plans d'abonnement (Admin/Owner).
    Use Case : Manage Plans (Admin/Owner) - Create, Update, Delete
-->

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/20"
            fx:controller="com.example.myarena.ui.PlanManagementFrame"
            styleClass="page-background"
            stylesheets="@styles/myarena-styles.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="page-header">
            <Button text="← Back to Menu" onAction="#handleBackToMenu" styleClass="button, secondary" style="-fx-font-weight: bold;"/>
            <Button text="✚ Create New Plan" onAction="#handleCreate" styleClass="button, primary" style="-fx-font-weight: bold;"/>

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Plans Management" styleClass="page-title"/>
                <Label fx:id="countLabel" text="Loading..." styleClass="page-subtitle"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <TilePane fx:id="cardsContainer" prefColumns="4" hgap="20" vgap="20" alignment="CENTER"/>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 2 0 0 0; -fx-padding: 15;">
            <Label fx:id="statusLabel" text="Loading..." styleClass="status-label"/>
        </HBox>
    </bottom>
</BorderPane>
