<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    Vue pour gérer les plans d'abonnement (Admin/Owner).
    Use Case : Manage Plans (Admin/Owner) - Create, Update, Delete
    Structure identique à subscription-plans.fxml
-->

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/20"
            fx:controller="com.example.myarena.ui.subscription.PlanManagementFrame"
            styleClass="page-background"
            stylesheets="@styles/myarena-styles.css">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="page-header">
            
            <!-- Titre -->
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Gestion des Plans d'Abonnement" styleClass="page-title"/>
                <Label text="Créer, modifier ou supprimer des plans" styleClass="page-subtitle"/>
            </VBox>
            
            <!-- Bouton Créer un Plan -->
            <Button text="+ Créer un Plan" styleClass="btn-primary" onAction="#handleCreate"/>
        </HBox>
    </top>

    <!-- Zone centrale avec ScrollPane pour les cards -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- TilePane : 4 cards par ligne (les cards seront ajoutées dynamiquement en Java) -->
            <TilePane fx:id="cardsContainer" 
                      prefColumns="4" 
                      hgap="20" 
                      vgap="20"
                      alignment="CENTER"/>
        </ScrollPane>
    </center>

    <!-- Footer avec statut -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 2 0 0 0; -fx-padding: 15;">
            
            <!-- Label de statut -->
            <Label fx:id="statusLabel" text="Chargement..." 
                   style="-fx-font-size: 14px; -fx-text-fill: #2E3A59; -fx-font-weight: bold;"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Nombre de plans -->
            <Label fx:id="countLabel" text="0 plan(s)" 
                   style="-fx-font-size: 13px; -fx-text-fill: #6C757D;"/>
        </HBox>
    </bottom>

</BorderPane>
