<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.myarena.ui.RentProductDialog"
      spacing="15" alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: white;">

    <Label text="Rent Equipment" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Separator/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Item: " style="-fx-font-weight: bold;"/>
        <Label fx:id="lblProductName" text="Product Name"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Rate: " style="-fx-font-weight: bold;"/>
        <Label fx:id="lblDailyPrice" text="$0.00 / day"/>
    </HBox>

    <Separator/>

    <GridPane vgap="10" hgap="10" alignment="CENTER">
        <Label text="Quantity:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Spinner fx:id="quantitySpinner" editable="true" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Start Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="startDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="End Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="endDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Separator/>

    <HBox spacing="20" alignment="CENTER">
        <VBox alignment="CENTER">
            <Label text="Duration" style="-fx-text-fill: gray;"/>
            <Label fx:id="lblTotalDays" text="0 days" style="-fx-font-weight: bold;"/>
        </VBox>
        <VBox alignment="CENTER">
            <Label text="Total Cost" style="-fx-text-fill: gray;"/>
            <Label fx:id="lblTotalPrice" text="$0.00" style="-fx-font-size: 16px; -fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>
        </VBox>
    </HBox>

    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="btnCancel" text="Cancel" prefWidth="80"/>
        <Button fx:id="btnConfirm" text="Add to Cart" defaultButton="true" prefWidth="100" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>

</VBox>