<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myarena.ui.ProductManagementController"
            stylesheets="@styles/myarena-styles.css">

    <top>
        <Label text="ðŸ”§ Equipment &amp; Product Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" BorderPane.alignment="CENTER">
            <padding><Insets top="20" bottom="20"/></padding>
        </Label>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="colPrice" text="Price ($)" prefWidth="80"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>

            <TitledPane text="Product Details" collapsible="false">
                <GridPane hgap="10" vgap="10" style="-fx-padding: 15;">
                    <Label text="Item Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" promptText="e.g. Tennis Racket" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Stock Qty:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <TextField fx:id="stockField" promptText="10" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                    <Label text="Sale Price ($):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="priceField" promptText="0.00" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Rent Price/Day ($):" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <TextField fx:id="rentalPriceField" promptText="0.00" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                    <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
                    <TextArea fx:id="descField" prefRowCount="3" wrapText="true" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>

                    <HBox spacing="20" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="3">
                        <CheckBox fx:id="sellableCheck" text="Available for Sale"/>
                        <CheckBox fx:id="rentableCheck" text="Available for Rent"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="4">
                        <Button fx:id="clearButton" text="Clear Form"/>
                        <Button fx:id="deleteButton" text="Delete" style="-fx-background-color: #ff4444; -fx-text-fill: white;" disable="true"/>
                        <Button fx:id="saveButton" text="Create Product" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </HBox>
                </GridPane>
            </TitledPane>
        </VBox>
    </center>
</BorderPane>