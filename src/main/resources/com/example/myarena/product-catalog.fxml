<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myarena.ui.ProductCatalogController"
            stylesheets="@styles/myarena-styles.css"
            styleClass="dashboard-background">

    <top>
        <VBox spacing="15">
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="top-nav">
                <Button fx:id="backButton" text="â† Back to Menu"
                        styleClass="button, secondary"
                        style="-fx-font-size: 12px; -fx-padding: 8 15;"/>

                <Region HBox.hgrow="ALWAYS"/>
                <Label text="MyArena Catalog" styleClass="logo-text" style="-fx-font-size: 18px;"/>
            </HBox>

            <VBox spacing="10" style="-fx-padding: 10 30 10 30;">
                <Label text="ðŸ›’ Equipment Catalog" styleClass="section-header" style="-fx-font-size: 24px;"/>

                <HBox spacing="10" alignment="CENTER_LEFT" styleClass="stat-card" style="-fx-padding: 10;">
                    <Label text="ðŸ”" style="-fx-font-size: 16px;"/>
                    <TextField fx:id="searchField" promptText="Search by name, category..."
                               HBox.hgrow="ALWAYS"
                               style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-size: 14px;"/>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox style="-fx-padding: 0 30 30 30;">
            <TableView fx:id="catalogTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colName" text="Item Name" prefWidth="180"/>
                    <TableColumn fx:id="colDesc" text="Description" prefWidth="250"/>
                    <TableColumn fx:id="colStatus" text="Availability" prefWidth="120"/>
                    <TableColumn fx:id="colPrice" text="Buy Price" prefWidth="100"/>
                    <TableColumn fx:id="colRentalPrice" text="Rent/Day" prefWidth="100"/>
                    <TableColumn fx:id="colAction" text="Actions" prefWidth="160"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>