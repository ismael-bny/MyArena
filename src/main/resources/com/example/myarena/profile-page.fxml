<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/20"
      fx:controller="com.example.myarena.ui.ProfileFrame"
      style="-fx-background-color: #f5f7fb;">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <!-- Title Section -->
    <VBox spacing="5" alignment="CENTER">
        <Label text="My Profile" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #030213;"/>
        <Label text="Manage your account information" style="-fx-font-size: 14px; -fx-text-fill: #717182;"/>
    </VBox>

    <!-- Profile Information Section -->
    <VBox spacing="15" maxWidth="500" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 8;">

        <Label text="Profile Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #030213;"/>

        <!-- User Info Display -->
        <HBox spacing="20">
            <Label fx:id="roleLabel" text="Role: -" style="-fx-font-size: 12px; -fx-text-fill: #717182;"/>
            <Label fx:id="statusLabel" text="Status: -" style="-fx-font-size: 12px; -fx-text-fill: #717182;"/>
        </HBox>

        <!-- Name Field -->
        <VBox spacing="8">
            <Label text="Full Name" style="-fx-font-weight: bold;"/>
            <TextField fx:id="nameField" promptText="Your name"/>
        </VBox>

        <!-- Email Field -->
        <VBox spacing="8">
            <Label text="Email Address" style="-fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="your.email@example.com"/>
        </VBox>

        <!-- Phone Field -->
        <VBox spacing="8">
            <Label text="Phone Number" style="-fx-font-weight: bold;"/>
            <TextField fx:id="phoneField" promptText="+33 6 12 34 56 78"/>
        </VBox>

        <!-- Update Profile Button -->
        <Button fx:id="updateProfileButton" text="Update Profile"
                maxWidth="Infinity"
                style="-fx-background-color: #030213; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 6;"/>

        <Separator/>

        <!-- Change Password Section -->
        <Label text="Change Password" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #030213;"/>

        <!-- Current Password -->
        <VBox spacing="8">
            <Label text="Current Password" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="currentPasswordField" promptText="Enter current password"/>
        </VBox>

        <!-- New Password -->
        <VBox spacing="8">
            <Label text="New Password" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="newPasswordField" promptText="At least 6 characters"/>
        </VBox>

        <!-- Confirm New Password -->
        <VBox spacing="8">
            <Label text="Confirm New Password" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter new password"/>
        </VBox>

        <!-- Change Password Button -->
        <Button fx:id="changePasswordButton" text="Change Password"
                maxWidth="Infinity"
                style="-fx-background-color: #030213; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 6;"/>

        <Separator/>

        <!-- Back Button -->
        <Button fx:id="backButton" text="â† Back to Menu"
                maxWidth="Infinity"
                style="-fx-background-color: transparent; -fx-border-color: #030213; -fx-border-width: 2; -fx-text-fill: #030213; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 6; -fx-border-radius: 6;"/>

        <!-- Message Label -->
        <Label fx:id="messageLabel" text="" wrapText="true" alignment="CENTER" maxWidth="Infinity"/>
    </VBox>
</VBox>