<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.myarena.ui.TerrainMaintenanceFrame"
      spacing="10">

    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </padding>

    <Label text="Terrain Management" style="-fx-font-size: 20px;"/>

    <Label fx:id="messageLabel" text=""/>

    <!-- Ligne avec boutons -->
    <HBox spacing="10">
        <Button fx:id="addButton" text="Add Terrain"/>
    </HBox>

    <!-- Liste de cartes dans un ScrollPane -->
    <ScrollPane fitToWidth="true">
        <content>
            <FlowPane fx:id="cardsContainer"
                      hgap="15" vgap="15"
                      prefWrapLength="600"/>
        </content>
    </ScrollPane>

</VBox>
